<div>


    <% @user.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>   
    
    <%= form_for(:users, :url => {:action => 'update'}) do |f| %>
    <h3>Edit <%=@user.user%>'s information.</h3>
        
      <%= f.label "name" %>
      <%= f.text_field(:user) %><br>
  
      <%= f.label "age" %>
      <%= f.text_field(:age) %><br>
  
      <%= f.label "email" %>
      <%= f.text_field(:email) %><br>
      
      <%=f.submit 'Save'%>
    <% end %>
    
<div>