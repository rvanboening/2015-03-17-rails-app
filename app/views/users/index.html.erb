<div class="row">
    <div class="column">
        <h3> Attendees </h3>
        <%= link_to 'Invite Someone New', :action => 'new' %>
        <hr>
    </div>
</div><!--end of attendees row -->

<div class="row">
    <div class="column">
        <ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-4">
            <% @users.each do |user| %>    
                <li>
                    <h3><%=user.user%></h3>
                    <p>Age: <%=user.age%></p>
                    <p>
                        <%=link_to 'Edit', :action => 'edit', :id => user.id%> | 
                        <%= link_to "Delete", "/users/#{user.id}", method: :delete%> |
                        <%= link_to("See Details", :action => 'show', :id => user.id, data:              { confirm: "Are you sure?"})%>
                    </p>
                    <hr>
                </li><!--end of med-3 col -->
            <%end%>
        </ul>
    </div>
    
</div><!--end of princess row -->
